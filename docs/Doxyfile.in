PROJECT_NAME           = "LibCMPC"
PROJECT_BRIEF          = "C89 cross-platform application framework"
OUTPUT_DIRECTORY       = "@CMAKE_CURRENT_BINARY_DIR@/docs"
CREATE_SUBDIRS         = NO

USE_MDFILE_AS_MAINPAGE = "@CMAKE_CURRENT_SOURCE_DIR@/docs/pages/index.md"
INPUT                  = "@CMAKE_CURRENT_SOURCE_DIR@/include" "@CMAKE_CURRENT_SOURCE_DIR@/docs/pages" "@CMAKE_CURRENT_SOURCE_DIR@/docs/generated"
IMAGE_PATH             = "@CMAKE_CURRENT_SOURCE_DIR@/docs/assets"
RECURSIVE              = YES
FILE_PATTERNS          = *.h *.md

EXTRACT_ALL            = YES
EXTRACT_STATIC         = YES
EXTRACT_PRIVATE        = NO

JAVADOC_AUTOBRIEF      = YES
OPTIMIZE_OUTPUT_FOR_C  = YES
INLINE_SOURCES         = NO

HIDE_UNDOC_MEMBERS     = NO
HIDE_UNDOC_CLASSES     = NO

WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = YES
WARN_AS_ERROR          = YES

QUIET                  = YES

GENERATE_HTML          = YES
GENERATE_LATEX         = NO

# Doxygen Awesome CSS (sidebar-only theme)
GENERATE_TREEVIEW      = YES
DISABLE_INDEX          = NO
FULL_SIDEBAR           = NO
HTML_COLORSTYLE        = LIGHT
HTML_EXTRA_STYLESHEET  = "@CMAKE_CURRENT_SOURCE_DIR@/docs/node_modules/@xpack-3rd-party/doxygen-awesome-css/doxygen-awesome.css" \
                          "@CMAKE_CURRENT_SOURCE_DIR@/docs/node_modules/@xpack-3rd-party/doxygen-awesome-css/doxygen-awesome-sidebar-only.css"

STRIP_FROM_PATH        = "@CMAKE_CURRENT_SOURCE_DIR@"

MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = NO

PREDEFINED             = CMP_DOXYGEN
