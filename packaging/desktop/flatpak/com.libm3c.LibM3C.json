{
  "app-id": "com.libm3c.LibM3C",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "libm3c-stub",
  "finish-args": [
    "--share=network"
  ],
  "modules": [
    {
      "name": "libm3c",
      "buildsystem": "cmake",
      "config-opts": [
        "-DM3_BUILD_PACKAGING_STUB=ON",
        "-DM3_ENABLE_GTK4=OFF",
        "-DM3_ENABLE_TESTS=OFF",
        "-DM3_ENABLE_COVERAGE=OFF"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../../.."
        }
      ]
    }
  ]
}
