{
  "app-id": "com.libcmpc.LibCMPC",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "libcmpc-stub",
  "finish-args": [
    "--share=network"
  ],
  "modules": [
    {
      "name": "libcmpc",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMP_BUILD_PACKAGING_STUB=ON",
        "-DCMP_ENABLE_GTK4=OFF",
        "-DBUILD_TESTING=OFF",
        "-DCMP_ENABLE_COVERAGE=OFF"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "../../.."
        }
      ]
    }
  ]
}
